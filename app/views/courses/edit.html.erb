<h1>Edit Courses</h1>

<%= form_with(model: @course, local: true) do |f| %>

<%= f.text_field :name, placeholder: "Course Name"%><br>
<%= f.text_field :hours, placeholder: "Class Hours" %><br>
<%= f.select(:students, @names, {:prompt => "Please Select"}, {:multiple => true, :size => 10}) %><br>

<%= f.submit 'Edit Course' %><br>
<% end %>

<div class="buttons"><br><br>
  <%= link_to 'List', courses_path %>
  <%= link_to 'Create a Course', new_course_path %>
  <%= link_to 'Delete', course_path, data: {:confirm => 'Are you sure?'}, :method => :delete %>
</div>
