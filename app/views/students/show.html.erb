
<p id="notice"><%= notice %></p>

<div class="section-header">
  <h1>Student Info</h1>
</div>

<p>
  <strong>First name:</strong>
  <%= @student.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @student.last_name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @student.age %>
</p>

<p>
  <strong>Education:</strong>
  <%= @student.education %>
</p>

<div class="buttons">
  <%= link_to 'Edit', onclick: "location.href='#{edit_student_path(@student)}'", class: "btn btn-info" %>
  <%= link_to 'Back', onclick: "location.href='#{students_path}'", class: "btn btn-info" %>
  <%= link_to "Delete", @student, :method => :delete, :confirm => "Are you sure ?"%>
 
</div>
