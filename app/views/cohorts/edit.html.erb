<h1>Edit Cohort</h1>

<%= form_with(model: @cohort, local: true) do |f| %>

<%= f.text_field :name, placeholder: "Cohort Name"%><br>
<%= f.date_field :start_date, placeholder: "Start Date" %><br>
<%= f.date_field :end_date, placeholder: "End Date" %><br>
<%= f.text_field :instructor_id, placeholder: "Instructor ID" %><br>
<%= f.text_field :student_id, placeholder: "Student ID" %><br><br>

<%= f.submit 'Edit Cohort' %><br>
<% end %>

<div class="buttons"><br><br>
  <%= link_to 'List', cohorts_path %>
  <%= link_to 'Create a Student', new_cohort_path %>
  <%= link_to 'Delete', cohort_path, data: {:confirm => 'Are you sure?'}, :method => :delete %>
</div>
