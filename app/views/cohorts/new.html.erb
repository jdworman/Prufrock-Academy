<h1>Add New Cohort</h1>

<%= form_for(@cohort) do |f| %>

<%= f.text_field :name, placeholder: "Cohort Name"%><br>
<%= f.date_field :start_date, placeholder: "Start Date" %><br>
<%= f.date_field :end_date, placeholder: "End Date" %><br>
<h5>Instructors: </h5>
<br>
<%= select_tag :instructor_id, options_for_select(Instructor.all.map { |st| ["#{st.first_name} #{st.last_name}",st.id]}), {multiple: :multiple, :size => 10}%>
<br>
<h5>Students: </h5>
<br>
<%= select_tag :student_id, options_for_select(Student.all.map { |st| ["#{st.first_name} #{st.last_name}",st.id]}), {multiple: :multiple, :size => 10}%>

<%= f.submit 'Add a Cohort' %><br>
<% end %>

<div class="buttons"><br><br>
  <%= link_to 'List', courses_path %>
</div>
