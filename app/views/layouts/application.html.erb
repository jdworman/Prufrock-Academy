<!DOCTYPE html>
<html>
  <head>
    <title>PrufrockAcademy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>


      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>


  <div class="admin">
    <header class="adminheader">
      <a href="#" class="symbolheader">
        <!-- <h1>ADMIN PANEL</h1> -->
                <% if @user %>
           <%= link_to "LOGOUT", logout_path(@user)%>

          <% end %>

      </a>
      <div class="toolbar">

      </div>
    </header>
    <nav class="adminnav">

      <ul class="sidebar">
        <li class="sidebar__item">
          <a class="sidebar__link" href="/">Home</a>
        </li>
        <li class="sidebar__item">
          <%= link_to 'STUDENTS', students_path, :class => "sidebar__link" %>
        </li>
        <li class="sidebar__item">
          <%= link_to 'INSTRUCTORS', instructors_path, :class => "sidebar__link" %>
        </li>
      <li class="sidebar__item">
        <%= link_to 'COHORTS', cohorts_path, :class => "sidebar__link" %>
        <li class="sidebar__item">
          <%= link_to 'COURSES', courses_path, :class => "sidebar__link" %>
        </li>
        <li class="sidebar__item">
          <%= link_to 'PRINCIPAL', "principal/index", :class => "sidebar__link" %>

        </li>
      </ul>
    </nav>
    <div class="adminmain">
      <%= yield %>

    </div>
    <footer class="adminfooter">ra
      <span>
        &copy; 2018 Prufrock Prepatory Academy
      </span>
    </footer>
  </div>



</body>
</html>
